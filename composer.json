{
    "name": "leovie/php-param-generator",
    "description": "Generate parameters in php.",
    "license": "proprietary",
    "type": "symfony-bundle",
    "autoload": {
        "psr-4": {
            "LeoVie\\PhpParamGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LeoVie\\PhpParamGenerator\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Leo Viezens",
            "email": "leo.viezens@web.de"
        }
    ],
    "require": {
        "symfony/dependency-injection": "^5.3",
        "symfony/config": "^5.3",
        "symfony/yaml": "^5.3",
        "symfony/http-kernel": "^5.3",
        "fakerphp/faker": "^1.16",
        "thecodingmachine/safe": "^1.3"
    },
    "require-dev": {
        "infection/infection": "^0.25.3",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.10",
        "psalm/plugin-symfony": "^3.0"
    },
    "scripts": {
        "psalm": "psalm -c build/config/psalm.xml --show-info=true",
        "phpunit": "phpunit -c build/config/phpunit.xml",
        "infection": "infection --only-covered --configuration=build/config/infection.json --min-msi=100 --min-covered-msi=100 --coverage=../coverage --threads=4 --test-framework-options='--no-coverage'",
        "infection-after-phpunit": "@infection --skip-initial-tests",
        "test": [
            "@psalm",
            "@phpunit"
        ],
        "testall": [
            "@test",
            "@infection-after-phpunit"
        ]
    }
}
